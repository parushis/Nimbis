<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Simple Blog</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <header><h1><a href="/">Simple Blog</a></h1></header>
  <main>
    <section>
      <h2>Posts</h2>
      <ul class="posts">
        <% posts.forEach(p => { %>
          <li>
            <a href="/<%= p.slug %>"><h3><%= p.title %></h3></a>
            <small><%= p.date %></small>
            <p><%= p.description %></p>
          </li>
        <% }) %>
      </ul>
    </section>
  </main>
  <footer>Â© <%= new Date().getFullYear() %> Simple Blog</footer>
</body>
</html>